<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmento_publicacion_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0"
            android:background="#FFB95A"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:src="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Crear PublicaciÃ³n"
                android:textSize="20sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0" />

        <View
            android:id="@+id/view43"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:background="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="#B57B7B"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fotoejemplo1" />

                    <View
                        android:id="@+id/view45"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#000000" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:scaleType="fitCenter"
                        android:src="@drawable/foto1" />

                    <View
                        android:id="@+id/view46"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#000000" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fotoejemplo3" />

                    <View
                        android:id="@+id/view47"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#000000" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:scaleType="fitCenter"
                        android:src="@drawable/foto" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/view42"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:background="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#858383">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Color" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Brillo" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Angulo" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Saturacion" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Desenfocar" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Normal"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Clarendon"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Gingham"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button18"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Moon"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button19"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Lark"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button20"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#714A4A"
                        android:insetRight="10dp"
                        android:paddingTop="4dp"
                        android:text="Reyes"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/edicion_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Edicion" />

            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/a_f_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Siguiente" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>