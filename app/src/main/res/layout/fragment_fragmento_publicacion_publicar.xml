<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmento_publicacion_publicar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#FFB95A"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:src="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Crear Publicación"
                android:textSize="20sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="0"
            android:background="#B57B7B"
            android:src="@drawable/fotoejemplo1" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:text="Añadir comentario a la publicacion"
            android:textColor="#454040"
            android:textSize="20sp" />

        <View
            android:id="@+id/view40"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#000000"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/editTextTextMultiLine2"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#817979"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/descripcion_de_relleno_publicacion"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:text="Añadir nombre del local"
            android:textColor="#454040"
            android:textSize="20sp" />

        <View
            android:id="@+id/view41"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#000000"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#817979"
            android:ems="10"
            android:hint="TAG"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0" />

        <Button
            android:id="@+id/button6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Publicar" />

    </LinearLayout>
</FrameLayout>